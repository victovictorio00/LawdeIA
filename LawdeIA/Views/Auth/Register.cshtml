@model RegisterViewModel
@{
    Layout = null;
    ViewData["Title"] = "LAWDGE IA - Register";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Urbanist:wght@700;800;900&display=swap" rel="stylesheet">

    <style>
        :root {
            --color-primary: #1a1a1a;
            --color-secondary: #f8f9fa;
            --color-accent: #334155;
            --color-border: #e2e8f0;
            --color-text: #1a1a1a;
            --color-text-light: #64748b;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            font-family: 'Inter', sans-serif;
            background: white;
            overflow: hidden;
        }

        .register-container {
            display: flex;
            height: 115vh;
            max-height: 115vh;
        }

        /* Left Side - Register Form */
        .register-left {
            flex: 0 0 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
            background: white;
            overflow: hidden;
            height: 100vh;

        }

        .register-card {
            width: 100%;
            max-width: 400px;
            max-height: 95vh;
            display: flex;
            flex-direction: column;
        }

        .scroll-content {
            flex: 1;
            overflow-y: auto;
            padding: 0.5rem 0;
            max-height: calc(95vh - 2rem);
        }

            .scroll-content::-webkit-scrollbar {
                width: 4px;
            }

            .scroll-content::-webkit-scrollbar-track {
                background: #f1f1f1;
                border-radius: 2px;
            }

            .scroll-content::-webkit-scrollbar-thumb {
                background: #c1c1c1;
                border-radius: 2px;
            }

                .scroll-content::-webkit-scrollbar-thumb:hover {
                    background: #a8a8a8;
                }

        .brand-logo {
            font-family: 'Urbanist', sans-serif;
            font-size: 1.7rem;
            font-weight: 900;
            color: var(--color-primary);
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .register-title {
            font-family: 'Urbanist', sans-serif;
            font-size: 1.3rem;
            font-weight: 800;
            color: var(--color-primary);
            text-align: center;
            margin-bottom: 1.2rem;
        }

        .google-register-btn {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            padding: 9px 14px;
            border: 2px solid var(--color-border);
            border-radius: 8px;
            background: white;
            color: var(--color-text);
            font-weight: 500;
            margin-bottom: 1.2rem;
            transition: all 0.3s ease;
            text-decoration: none;
            font-size: 0.8rem;
        }

            .google-register-btn:hover {
                border-color: var(--color-primary);
                background: var(--color-secondary);
                transform: translateY(-1px);
            }

            .google-register-btn i {
                margin-right: 8px;
                font-size: 0.9rem;
                color: #4285F4;
            }

        .divider {
            display: flex;
            align-items: center;
            margin: 1.2rem 0;
            color: var(--color-text-light);
            font-size: 0.75rem;
        }

            .divider::before,
            .divider::after {
                content: '';
                flex: 1;
                border-bottom: 1px solid var(--color-border);
            }

            .divider span {
                padding: 0 0.6rem;
            }

        .form-row {
            display: flex;
            gap: 0.8rem;
            margin-bottom: 0.8rem;
        }

        .form-group {
            flex: 1;
            margin-bottom: 0;
        }

        .form-group-full {
            width: 100%;
            margin-bottom: 0.8rem;
        }

        .form-control {
            border: 2px solid var(--color-border);
            border-radius: 6px;
            padding: 8px 10px;
            font-size: 0.8rem;
            transition: all 0.3s ease;
            background: white;
            height: 38px;
            width: 100%;
        }

            .form-control:focus {
                border-color: var(--color-primary);
                box-shadow: 0 0 0 2px rgba(26, 26, 26, 0.1);
            }

        .form-label {
            font-weight: 600;
            color: var(--color-text);
            margin-bottom: 0.3rem;
            font-size: 0.8rem;
            display: block;
        }

        .btn-register {
            background: var(--color-primary);
            color: white;
            border: none;
            border-radius: 6px;
            padding: 9px 14px;
            font-weight: 600;
            font-size: 0.8rem;
            transition: all 0.3s ease;
            width: 100%;
            height: 38px;
            margin-top: 0.3rem;
        }

            .btn-register:hover {
                background: #000;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(26, 26, 26, 0.3);
            }

        .login-link {
            text-align: center;
            margin: 1.2rem 0 0.8rem;
            font-size: 0.75rem;
        }

            .login-link a {
                color: var(--color-primary);
                text-decoration: none;
                font-weight: 600;
                transition: color 0.3s ease;
            }

                .login-link a:hover {
                    color: var(--color-accent);
                }

        .terms {
            text-align: center;
            color: var(--color-text-light);
            font-size: 0.65rem;
            line-height: 1.2;
            margin-top: 0.8rem;
        }

            .terms a {
                color: var(--color-primary);
                text-decoration: none;
                font-weight: 500;
            }

                .terms a:hover {
                    text-decoration: underline;
                }

        .validation-summary-errors {
            font-size: 0.75rem;
            padding: 0.4rem;
            border-radius: 4px;
            margin-bottom: 0.8rem;
            background-color: #f8d7da;
            border: 1px solid #f5c6cb;
            color: #721c24;
        }

            .validation-summary-errors ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .validation-summary-errors li {
                margin: 0.2rem 0;
            }

        .field-validation-error {
            font-size: 0.7rem;
            display: block;
            margin-top: 0.2rem;
            color: #dc3545;
        }

        /* Right Side - Image */
        .register-right {
            flex: 0 0 50%;
            background: linear-gradient(135deg, #1a1a1a 0%, #2d3748 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0;
            position: relative;
            overflow: hidden;
        }

        .image-container {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
            padding: 0;
        }

        .register-image {
            width: 115%;
            height: 115%;
            object-fit: cover;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .register-container {
                flex-direction: column-reverse;
                height: 100vh;
            }

            .register-left {
                flex: 1;
                padding: 0.8rem;
            }

            .register-right {
                flex: 0 0 40vh;
                padding: 0;
            }

            .register-card {
                max-height: 100%;
            }

            .scroll-content {
                max-height: calc(100vh - 40vh - 2rem);
            }

            .form-row {
                flex-direction: column;
                gap: 0;
            }

            .form-group {
                margin-bottom: 0.8rem;
            }

            .register-image {
                height: 100%;
                object-fit: cover;
            }
        }

        @@media (max-height: 700px) {
            .brand-logo {
                font-size: 1.5rem;
                margin-bottom: 0.3rem;
            }

            .register-title {
                font-size: 1.1rem;
                margin-bottom: 1rem;
            }

            .form-control {
                height: 36px;
                padding: 7px 9px;
            }

            .btn-register {
                height: 36px;
                padding: 8px 12px;
            }
        }
    </style>
</head>
<body>
    <div class="register-container">
        <!-- Left Side - Register Form -->
        <div class="register-left">
            <div class="register-card">
                <div class="scroll-content">
                    <div class="brand-logo">
                        <i class="fas fa-gavel me-2"></i>LAWDGE IA
                    </div>
                    <div class="register-title">Create your account</div>

                    <!-- Google Register Button -->
                    <a href="#" class="google-register-btn">
                        <i class="fab fa-google"></i>
                        Sign up with Google
                    </a>

                    <!-- Divider -->
                    <div class="divider">
                        <span>or continue with</span>
                    </div>

                    <!-- Registration Form -->
                    <form asp-action="Register" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Primera fila: Username y Email -->
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" placeholder="Username" />
                                <span asp-validation-for="Username" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Email" />
                                <span asp-validation-for="Email" class="field-validation-error"></span>
                            </div>
                        </div>

                        <!-- Segunda fila: Full Name -->
                        <div class="form-group-full">
                            <label asp-for="FullName" class="form-label">Full name</label>
                            <input asp-for="FullName" class="form-control" placeholder="Full name" />
                            <span asp-validation-for="FullName" class="field-validation-error"></span>
                        </div>

                        <!-- Tercera fila: Password y Confirm Password -->
                        <div class="form-row">
                            <div class="form-group">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="field-validation-error"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label">Confirm</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                                <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
                            </div>
                        </div>

                        <button type="submit" class="btn-register">
                            <i class="fas fa-user-plus me-2"></i>Create account
                        </button>
                    </form>

                    <div class="login-link">
                        Already have an account? <a asp-action="Login">Sign in</a>
                    </div>

                    <div class="terms">
                        By continuing, you agree to LAWDGE IA's <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a>.
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Side - Image -->
        <div class="register-right">
            <div class="image-container">
                <img src="~/images/logo.png" alt="Legal AI Assistant" class="register-image"
                     onerror="this.style.display='none'">
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Validation Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>