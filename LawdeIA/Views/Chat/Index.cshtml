@{
    ViewData["Title"] = "Chat - LawdeIA";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Urbanist:wght@700;800;900&display=swap" rel="stylesheet">

    <!-- CSS CORREGIDO -->
    <link rel="stylesheet" href="~/css/chatMain-minimal-black.css" asp-append-version="true" />
</head>
<body>
    <div class="chat-app-container">
        <!-- Sidebar -->
        <div class="chat-sidebar">
            <div class="sidebar-header">
                <div style="display: flex; align-items: center; justify-content: space-between; width: 100%;">
                    <div class="brand-logo">
                        <i class="fas fa-gavel"></i> LAWDGE IA
                    </div>
                    <button class="theme-toggle" id="theme-toggle">
                        <i class="fas fa-moon"></i>
                    </button>
                </div>
                <button class="new-chat-btn" id="new-chat-btn">
                    <i class="fas fa-plus"></i> Nuevo Chat
                </button>
            </div>
            <div class="conversations-list" id="conversations-sidebar">
                <!-- JS carga aquí -->
            </div>
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">@(ViewBag.Username?[0].ToString().ToUpper() ?? "U")</div>
                    <div class="user-details">
                        <div class="user-name">@ViewBag.Username</div>
                        <div class="user-email">@ViewBag.Email</div>
                    </div>
                </div>
                <form asp-controller="Auth" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="logout-btn">
                        <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                    </button>
                </form>
            </div>
        </div>

        <!-- Main Chat -->
        <div class="chat-main">
            <div class="chat-header">
                <div class="chat-title" id="chat-title">LawdeIA Chat</div>
            </div>
            <div class="messages-container" id="messages">
                <div class="welcome-section">
                    <h1 class="welcome-title">¡Hola @ViewBag.Username!</h1>
                    <p style="color:var(--color-text-light);max-width:700px;margin:1.5rem auto;line-height:1.6;">
                        Soy tu asistente legal especializado en derecho peruano. Puedo analizar contratos, responder consultas legales, buscar jurisprudencia y mucho más.
                    </p>
                </div>
            </div>
            <div class="input-area">
                <div class="input-container">
                    <textarea id="message-input" placeholder="Escribe tu consulta legal aquí..." rows="1"></textarea>
                    <button class="send-btn" id="send-btn">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Anti-forgery token -->
    @Html.AntiForgeryToken()

    <!-- JS CORREGIDO -->
    <script src="~/js/chatcode.js" asp-append-version="true"></script>
</body>
</html>